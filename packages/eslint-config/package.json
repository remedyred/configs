{
	"name": "@snickbit/eslint-config",
	"version": "0.0.7",
	"description": "Snickbit eslint config",
	"license": "MIT",
	"exports": {
		".": "./dist/configs/index.js",
		"./*": "./dist/configs/*.js"
	},
	"main": "./dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"prod": "pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run build --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@types/eslint": "^8.4.5",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint-plugin-beautiful-sort": "^2.0.3",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-json-files": "^1.3.0",
		"eslint-plugin-sort-class-members": "^1.14.1",
		"eslint-plugin-vue": "^9.3.0",
		"vue-eslint-parser": "^9.0.3"
	},
	"devDependencies": {
		"@types/jest": "^28.0.0",
		"@types/node": "^18.0.2",
		"eslint": "8.21.0",
		"fast-glob": "^3.2.11",
		"jest": "^28.0.0",
		"ts-jest": "^28.0.0",
		"tsup": "6.2.2",
		"typescript": "4.7.4"
	},
	"peerDependencies": {
		"eslint": ">= 8.19.0"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/**/*.ts"
		],
		"clean": true,
		"format": [
			"cjs"
		]
	}
}
