{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"packageRules": [
		{
			"matchSourceUrlPrefixes": [
				"https://github.com/ghiscoding/lerna-lite"
			],
			"matchUpdateTypes": [
