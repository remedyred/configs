{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"preview:dockerCompose",
		"preview:dockerVersions",
		"regexManagers:dockerfileVersions",
		"workarounds:doNotUpgradeFromAlpineStableToEdge",
		"group:recommended",
		"group:monorepos",
		"helpers:disableTypesNodeMajor",
		"npm:unpublishSafe",
		"workarounds:typesNodeVersioning",
		"replacements:all"
	],
	"assignees": [
		"snickbit"
	],
	"automerge": true,
	"ignoreDeps": [],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true,
		"automergeType": "pr",
		"platformAutomerge": true
	},
	"packageRules": [
		{
			"matchDepTypes": [
				"devDependencies"
			],
			"matchPackagePatterns": [
				"lint",
				"prettier",
				"@snickbit/eslint-config"
			],
			"automerge": true
		},
		{
			"matchUpdateTypes": [
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		},
		{
			"matchUpdateTypes": [
				"patch"
			],
			"matchPackagePatterns": [
				"^esbuild"
			],
			"automerge": true
		},
		{
			"groupName": "@types packages (minor or patch)",
			"matchPackagePatterns": [
				"^@types/"
			],
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"automerge": true
		},
		{
			"matchPackagePrefixes": [
				"@snickbit",
				"@remedyred"
			],
			"stabilityDays": 1
		}
	],
	"pin": {
		"automerge": true
	}
}
