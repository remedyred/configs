		"fast-glob": "^3.2.11",
		"unixify": "^1.0.0"
	},
	"devDependencies": {
		"@types/jest": "^28.1.7",
		"@types/node": "^18.7.9",
		"jest": "^28.1.3",
		"renovate": "^32.169.1",
		"ts-jest": "^28.0.8",
		"ts-node": "^10.9.1",
		"typescript": "4.8.4"
	}
