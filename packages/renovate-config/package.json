{
	"name": "renovate-config",
	"version": "0.2.0",
	"private": true,
	"scripts": {
		"build": "pnpm run dev && pnpm run validate",
		"dev": "ts-node ./src/index.ts build",
		"release": "semantic-release",
		"validate": "renovate-config-validator ../../default.json ../../all.json",
		"watch": "ts-node ./src/index.ts watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "^3.0.4",
		"@snickbit/node-utilities": "^4.4.4",
		"@snickbit/out": "^2.0.37",
		"@snickbit/utilities": "^3.3.0",
		"chokidar": "^3.5.3",
		"debounce": "^1.2.1",
		"fast-glob": "^3.2.11",
		"unixify": "^1.0.0"
	},
	"devDependencies": {
		"@snickbit/semantic-release": "workspace:^0.1.2",
		"@types/jest": "^28.0.0",
		"@types/node": "^18.0.2",
		"jest": "^28.0.0",
		"renovate": "^32.152.0",
		"semantic-release": "19.0.3",
		"semantic-release-monorepo": "^7.0.5",
		"ts-jest": "^28.0.0",
		"ts-node": "^10.9.1",
		"typescript": "4.7.4"
	}
}
