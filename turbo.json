{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"//#lint": {
			"dependsOn": ["^prod"],
			"outputs": []
		},
		"//#fix": {
			"dependsOn": ["^prod"],
			"outputs": []
		},
		"//#test": {
			"dependsOn": ["^prod"],
			"outputs": []
		},
		"//#validate": {
			"dependsOn": ["^prod"],
			"outputs": []
		},
		"prod": {
			"dependsOn": ["^prod"],
			"outputs": ["dist/**"]
		},
		"release": {
			"dependsOn": ["^prod", "//#lint", "//#test", "//#validate"],
			"outputs": []
		}
	}
}
