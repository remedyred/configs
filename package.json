{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run build fix test validate",
		"release": "turbo run release",
		"release:ci": "multi-semantic-release",
		"test": "jest",
		"validate": "renovate-config-validator default.json dev.json dev-next.json next-release.json renovate.json"
	},
	"lint-staged": {
		"*.{ts,json,yml,yaml}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"projects": [
			"<rootDir>/packages/*"
		],
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "*",
		"@types/jest": "29.1.1",
		"eslint": "8.24.0",
		"husky": "8.0.1",
		"jest": "29.4.3",
		"lint-staged": "13.0.3",
		"multi-semantic-release": "^3.0.0",
		"renovate": "32.187.0",
		"semantic-release": "19.0.5",
		"ts-jest": "29.0.5",
		"turbo": "1.5.5",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
