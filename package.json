{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"fix": "eslint . --cache --color --fix",
		"lint": "eslint . --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run prod fix test validate",
		"release": "pnpm run prerelease && lerna publish",
		"test": "jest",
		"validate": "renovate-config-validator default.json all.json renovate.json"
	},
	"lint-staged": {
		"*.{ts,json}": "eslint --fix --cache"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"projects": [
			"<rootDir>/packages/*"
		],
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.11.0",
		"@snickbit/eslint-config": "workspace:*",
		"@types/jest": "28.1.7",
		"@typescript-eslint/eslint-plugin": "5.33.1",
		"@typescript-eslint/parser": "5.33.1",
		"eslint": "8.22.0",
		"eslint-plugin-beautiful-sort": "2.0.3",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-json-files": "1.3.0",
		"eslint-plugin-sort-class-members": "1.14.1",
		"husky": "8.0.1",
		"jest": "28.1.3",
		"lint-staged": "13.0.3",
		"renovate": "32.159.0",
		"sort-package-json": "1.57.0",
		"ts-jest": "28.0.8",
		"turbo": "1.4.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	}
}
