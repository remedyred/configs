{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"fix": "eslint **/*.json --cache --color --fix",
		"lint": "eslint **/*.json --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run fix",
		"release": "pnpm run prerelease && lerna publish",
		"validate": "renovate-config-validator default.json && renovate-config-validator renovate.json"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.9.1",
		"@snickbit/eslint-config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "5.32.0",
		"@typescript-eslint/parser": "5.32.0",
		"eslint": "8.21.0",
		"eslint-plugin-beautiful-sort": "2.0.3",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-json-files": "1.3.0",
		"eslint-plugin-sort-class-members": "1.14.1",
		"husky": "^8.0.1",
		"sort-package-json": "1.57.0",
		"turbo": "1.4.2",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	}
}
